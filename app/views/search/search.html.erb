<% if @model == 'customer' %>
  <div class="container">
    <div class="row mb-4">
      <div class="col-12">
        <h2 class="my-4">Users search for "<%= @content %>"</h2>
        <div class="row">
          <div class="col-10 mx-auto">
            <table class="table">
              <thead class="thead-light">
                <tr>
                  <th>会員ID</th>
                  <th>氏名</th>
                  <th>メールアドレス</th>
                  <th>ステータス</th>
                </tr>
              </thead>
              <tbody>
                <% @records.each do |customer| %>
                  <tr>
                    <td><%= customer.id %></th>
                    <td>
                      <%= link_to admin_customer_path(customer) do %>
                        <%= customer.last_name + customer.first_name %>
                      <% end %>
                    </td>
                    <td>
                      <%= customer.email %>
                    </td>
                    <td>
                      <% if customer.is_deleted %>
                        <span>退会</span>
                      <% else %>
                        <span class="text-success">有効</span>
                      <% end %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
      <div class="mx-auto">
      </div>
    </div>
  </div>
<% elsif @model == 'item' %>
  <% if admin_signed_in? %>
    <div class="container my-5">
    <%= render "shared/flash_message" %>
    <div class="row">
      <h2>
        Items search for "<%= @content %>"
      </h2>
    </div>
    <h1><%= link_to "", new_admin_item_path, class: "far fa-plus-square float-right text-secondary fa-lg" %></h1>
    <br>
    <div class="row mt-5">
      <table class="table table-striped table-hover">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @records.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td>
                <%= link_to admin_item_path(item.id) do %>
                  <%= item.name %>
                <% end %>
              </td>
              <td>
                <%= item.price %>
                円
              </td>
              <td><%= item.type.name %></td>
              <td>
                <% if item.is_active == true %>
                  販売中
                <% elsif item.is_active == false %>
                  販売停止中
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="container">
      <h2 class="col-md-5 my-3">
        Items search for "<%= @content %>"
      </h2>
      <div class="row">
        <% @records.each do |item| %>
          <div class="col-md-3 mx-auto">
            <p>
              <!--商品画像とshowページへのリンク-->
              <%= link_to item_path(item.id) do %>
                <%= attachment_image_tag item, :image, :fill, 200, 200, fallback: "no_image.jpg", size: "200x200", class:"border rounded" %>
              <% end %>
            </p>
            <h5><%= item.name %></h5>
            <p>
              <% if item.is_active == true %>
                ￥<%= item.price.to_s(:delimited) %>
              <% elsif item.is_active == false %>
                売り切れ中
              <% end %>
            </p>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>