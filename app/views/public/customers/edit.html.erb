<div class="container">

  <% if @customer.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show mt-4">
    <h5 class="alert-heading">
      <%= @customer.errors.count %> 件修正して下さい:
    </h5>
    <ul class="mb-0">
      <% @customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  <% end %>

  <div class="row">

    <div class="offset-1">
      <h2 class="mt-5 mb-4 text title-sub-text">Edit customer information...</h2>
    </div>

    <div class="col-10 mx-auto">
      <%= form_with model: @customer, url: customers_path, local:true do |f| %>

        <div class="form-group row text">
          <%= f.label :first_name, "氏名", class: "col-3 col-form-label" %>
          <div class="col-4">
            <%= f.text_field :last_name, class: "form-control" %>
          </div>
          <div class="col-4">
            <%= f.text_field :first_name, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row text">
          <%= f.label :first_name, "フリガナ", class: "col-3 col-form-label"  %>
          <div class="col-4">
            <%= f.text_field :last_name_kana, class: "form-control" %>
          </div>
          <div class="col-4">
            <%= f.text_field :first_name_kana, class: "form-control" %>
          </div>
        </div>

        <div class="form_group row mb-3 text">
          <%= f.label :zip_code, "郵便番号", class: "col-3 col-form-label" %>
          <div class="col-4">
            <%= f.text_field :zip_code, class: "form-control" %>
          </div>
        </div>

        <div class="form_group row mb-3 text">
          <%= f.label :address, "住所", class: "col-3 col-form-label" %>
          <div class="col-8">
            <%= f.text_field :address, class: "form-control" %>
          </div>
        </div>

        <div class="form-group row text">
          <%= f.label :phone_number, "電話番号", class: "col-3 col-form-label" %>
          <div class="col-4">
            <%= f.text_field :phone_number, class: "form-control" %>
          </div>
        </div>

        <div class="form_group row text">
          <%= f.label :email, "メールアドレス", class: "col-3 col-form-label" %>
          <div class="col-4">
            <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>

        <div class="form_group row my-4 text">
          <div class="col-2 offset-3">
            <%= f.submit "Save", class: "btn btn-success btn-size btn-block" %>
          </div>
          <div class="offset-1 col-2">
            <%= link_to "Quit", confirm_customers_path, class: "btn btn-danger btn-block" %>
          </div>
        </div>

      <% end %>

    </div>

  </div>

</div>